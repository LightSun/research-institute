<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="DiscView">
        <!-- 最大圆盘的宽高,  行间距,  圆的边缘颜色 -->
        <attr name="disc_max_width_height" format="dimension|reference"/>
        <attr name="disc_row_distance" format="dimension|reference"/>
        <attr name="disc_circle_color" format="color|reference"/>

    </declare-styleable>


    <!-- ShadowLayout 阴影 -->
    <declare-styleable name="ShadowLayout">
        <attr name="shadowColor" format="color"/>
        <attr name="shadowRadius" format="dimension"/>
        <attr name="shadowDx" format="dimension"/>
        <attr name="shadowDy" format="dimension"/>
        <attr name="shadowSide">
            <flag name="all" value="0x1111"/>
            <flag name="left" value="0x0001"/>
            <flag name="top" value="0x0010"/>
            <flag name="right" value="0x0100"/>
            <flag name="bottom" value="0x1000"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="RectangleProgressView">
        <attr name="rect_progress_height" format="dimension|reference"/>
        <attr name="rect_progress_color" format="color|reference"/>
    </declare-styleable>

    <declare-styleable name="BalanceView">
        <attr name="balance_progress_color" format="color|reference"/>
        <attr name="balance_default_color" format="color|reference"/>
        <attr name="balance_progress_height" format="dimension|reference"/>
        <attr name="balance_ball_radius" format="dimension|reference"/>
        <attr name="balance_ball_color" format="color|reference"/>
        <attr name="balance_indicator_text_size" format="dimension|reference"/>
        <attr name="balance_indicator_margin_ball" format="dimension|reference"/>
        <attr name="balance_indicator_rect_width" format="dimension|reference"/>
        <attr name="balance_indicator_rect_height" format="dimension|reference"/>
        <attr name="balance_narrowly_when_click" format="boolean|reference"/>
    </declare-styleable>

    <declare-styleable name="SeekView">
        <attr name="seek_progress_color" format="color|reference"/>
        <attr name="seek_default_color" format="color|reference"/>
        <attr name="seek_progress_height" format="dimension|reference"/>
        <attr name="seek_ball_radius" format="dimension|reference"/>
        <attr name="seek_ball_color" format="color|reference"/>
        <attr name="seek_indicator_text_size" format="dimension|reference"/>
        <attr name="seek_indicator_margin_ball" format="dimension|reference"/>
        <attr name="seek_indicator_rect_width" format="dimension|reference"/>
        <attr name="seek_indicator_rect_height" format="dimension|reference"/>
        <attr name="seek_narrowly_when_click" format="boolean|reference"/>
    </declare-styleable>

    <declare-styleable name="VidaStickyLayout">
        <attr name="vsl_max_scroll_height" format="dimension|reference"/>
        <attr name="vsl_auto_fit_percent" format="float|reference"/>
        <attr name="vsl_auto_fit_enabled" format="boolean|reference"/>
        <attr name="vsl_keep_visible_height" format="boolean|reference"/>
    </declare-styleable>

</resources>